<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= name %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="nameTextField">Tournament Name</label>
                <input type="text" class="form-control" id="nameTextField"
                placeholder="Tournament Name" name="name" value="<%= match.name %>" required>
              </div>
              <div class="form-group">
                <label for="descriptionTextArea">Description</label>
                <input type="text" class="form-control" id="descriptionTextArea"
                placeholder="Description" name="description" value="<%= match.description %>" required>
              </div>
              <div class="form-group">
                <label for="priceTextField">Owner</label>
                <input type="text" class="form-control" id="ownerTextField"
                placeholder="Owner" name="price" value="<%= match.owner %>"  required>
              </div>
              <div class="form-group">
                <label for="activeCheckBox">Active Tournament</label>
                <input type="checkbox" class="form-control" id="activeCheckBox"
                placeholder="Active Tournament" name="active" value="<%= match.active %>"  required>
              </div>
              <div class="form-group">
                <label for="dateTextField">Date Completed (if no)</label>
                <input type="text" class="form-control" id="dateTextField"
                placeholder="Date" name="date" value="<%= match.date %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/tournament" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
