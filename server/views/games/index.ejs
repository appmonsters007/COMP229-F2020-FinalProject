<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Tournament List </h3>
          <a href="/tournament/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add Match</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Tournament Name</th>
                   <th class="text-center">Description</th>
                  <th class="text-center">Owner</th>
                  <th class="text-center">Active Tournament</th>
                  <th class="text-center">Date</th>
                  <th class="text-center">Edit Buttons</th>
                  <th class="text-center"> Delete Buttons</th>
                 
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < games.length; count++) { %>
                <tr>
                  <td><%= games[count].name %></td>
                  <td class="text-center"><%= games[count].description %></td>
                  <td class="text-center">$<%= games[count].owner %></td>
                  <td class="text-center"><%= games[count].active %></td>
                  <td class="text-center"><%= games[count].date %></td>

                  <td class="text-center">
                    <!-- ADDED an EDIT BUTTON HERE -->
                    <a href="/tournament/edit/<%= games[count]._id %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-pencil-alt"></i> Edit</a>
                  </td>

                  <td class="text-center">
                    <!-- ADDED the DELETE BUTTON HERE -->
                    <a href="/tournament/delete/<%= games[count]._id %>" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete</a>

                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


